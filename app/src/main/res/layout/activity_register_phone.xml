    <android.support.v7.widget.Toolbar
        android:id="@+id/tl_rap_toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_margin="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_phone_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/phone_head"
            android:textColor="@color/primary"
            android:layout_gravity="center_vertical"
            android:textSize="16sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_arp_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_phone_head"
            >
            <EditText
                android:id="@+id/et_arp_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/input_phoneNumber"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btn_arp_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/bt_commit"
        android:text="@string/next_setp"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/ck_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/checkbox"
            android:button="@null"
            android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="@string/agree_agreement"
            android:textSize="16sp" />

        <com.amlogic.tzr.charismatic_yichang.view.TextURLView
            android:id="@+id/tv_arp_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

