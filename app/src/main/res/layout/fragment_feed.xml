<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/cl_ff_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:visibility="gone">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_ff_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.amlogic.tzr.charismatic_yichang.view.AutoLoadRecyclerView
            android:id="@+id/rv_ff_feed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            />
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_ff_photo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_instagram_white"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"/>
</android.support.design.widget.CoordinatorLayout>
    <RelativeLayout
        android:id="@+id/rl_ff_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
            android:id="@+id/pb_ff_progress"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@color/primary"
            />
    </RelativeLayout>
</RelativeLayout>